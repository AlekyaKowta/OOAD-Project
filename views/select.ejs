  <div class="container card-box1">
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="../images/ts1.jpg" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title">Nice </h5>
          <a href="#" class="btn btn-primary pd">Passenger Flow</a>
          <a href="#" class="btn btn-success pd" onClick="getWeatherN();">Check Weather</a>
        </div>
      </div>
      <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="../images/ts2.jpg" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title"> French Riviera</h5>
          <a href="#" class="btn btn-primary pd">Passenger Flow</a>
          <a href="#" class="btn btn-success pd" onClick="getWeatherF();">Check Weather</a>
        </div>
      </div>
  </div>
  <div id="NandF" class="alert alert-info"></div>

  <div class="container card-box2">
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="../images/ts3.jpg" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title">Marseille</h5>
          <a href="#" class="btn btn-primary pd">Passenger Flow</a>
